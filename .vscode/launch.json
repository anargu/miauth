    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Dev",
            "program": "${workspaceFolder}/index.js",
            "env": {
                "SALT": "10",
                "ACCESS_TOKEN_EXPIRATION": "86400",
                "ACCESS_TOKEN_SECRET": "m14uth",
                "PORT": "5001",
                "POSTGRES_USER": "miauth",
                "POSTGRES_PASSWORD": "m14uthdb",
                "POSTGRES_HOST": "localhost",
                "POSTGRES_PORT": "5432",
                "POSTGRES_DB": "db_dev",
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Current File",
            "program": "${workspaceFolder}/node_modules/.bin/mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${file}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}